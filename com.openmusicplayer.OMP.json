{
  "app-id": "com.openmusicplayer.OMP",
  "runtime": "org.gnome.Platform",
  "runtime-version": "45",
  "sdk": "org.gnome.Sdk",
  "finish-args": [
    "--socket=x11",
    "--share=ipc",
    "--share=network",
    "--filesystem=host",
    "--socket=pulseaudio",
    "--socket=wayland",
    "--socket=session-bus"
  ],
  "cleanup": [
    "/app/include",
    "/lib/pkgconfig",
    "/share/man",
    "*.a"
  ],
  "command": "omp",
  "modules": [
    {
      "name": "omp",
      "buildsystem": "meson",
      "config-opts": [
          "-Dinstall_directory=com.openmusicplayer.OMP",
          "-Ddesktop_file_directory=current/active/export"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/TheWiseNoob/OMP.git",
          "branch": "experimental",
          "commit": "434fb9a8f4c90e5ad507d239876e4c9fe1b6fa9a"
        }
      ]
    }
  ]
}